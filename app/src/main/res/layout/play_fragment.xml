<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:background="@drawable/selector_open"
        app:layout_widthPercent="28%"
        app:layout_aspectRatio="100%"
        android:id="@+id/openClose"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="2%"
        />

    <TextView
        android:id="@+id/recOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:textSize="20sp"
        android:textAlignment="center"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/openClose"
        android:layout_alignRight="@+id/openClose"
        android:layout_alignEnd="@+id/openClose"

        app:layout_marginLeftPercent="2%"
        />

    <Button
        android:background="@drawable/button_mail"
        app:layout_widthPercent="28%"
        app:layout_aspectRatio="100%"
        android:id="@+id/mail"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/recOpen"

        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="2%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail"
        android:textSize="20sp"
        android:textAlignment="center"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/mail"
        android:layout_alignLeft="@+id/mail"
        android:layout_alignStart="@+id/mail"

        app:layout_marginRightPercent="2%"
        />

    <Button
        android:id="@+id/playStop"
        app:layout_widthPercent="40%"
        app:layout_aspectRatio="100%"
        android:background="@drawable/selector_play"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rename"
        android:textSize="20sp"
        android:textAlignment="center"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rename"
        android:layout_alignRight="@+id/rename"
        android:layout_alignEnd="@+id/rename"

        app:layout_marginLeftPercent="2%"/>

    <Button
        android:id="@+id/rename"
        app:layout_widthPercent="28%"
        app:layout_aspectRatio="100%"
        android:background="@drawable/button_rename"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:layout_marginLeftPercent="2%"
        app:layout_marginBottomPercent="2%"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="20sp"
        android:textAlignment="center"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/delete"
        android:layout_alignLeft="@+id/delete"
        android:layout_alignStart="@+id/delete"

        app:layout_marginRightPercent="2%"/>

    <Button
        app:layout_widthPercent="28%"
        app:layout_aspectRatio="100%"
        android:background="@drawable/button_delete"
        android:id="@+id/delete"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        app:layout_marginRightPercent="2%"
        app:layout_marginBottomPercent="2%"
         />
</android.support.percent.PercentRelativeLayout>