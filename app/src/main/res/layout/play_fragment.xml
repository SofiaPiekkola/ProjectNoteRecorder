<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">
    <!--Play button-->
    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/playStop"
        app:layout_widthPercent="50%"
        app:layout_aspectRatio="100%"
        android:background="@drawable/selector_play"
        android:layout_centerHorizontal="true"/>

    <!--Mail button-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mail"
        android:textSize="20sp"
        android:textAlignment="center"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/mail"
        android:layout_alignRight="@+id/mail"
        android:layout_alignEnd="@+id/mail"

        app:layout_marginLeftPercent="2%"/>

    <Button
        android:background="@drawable/button_mail"
        app:layout_widthPercent="28%"
        app:layout_aspectRatio="100%"
        android:id="@+id/mail"

        app:layout_marginLeftPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Open button-->
    <TextView
        android:id="@+id/recOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open"
        android:textSize="20sp"
        android:textAlignment="center"

        android:layout_above="@+id/openClose"
        android:layout_alignLeft="@+id/openClose"
        android:layout_alignStart="@+id/openClose"

        android:layout_alignRight="@+id/openClose"
        android:layout_alignEnd="@+id/openClose" />

    <Button
        android:background="@drawable/selector_open"
        app:layout_widthPercent="28%"
        app:layout_aspectRatio="100%"
        android:id="@+id/openClose"

        app:layout_marginRightPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!--Delete button-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textSize="20sp"
        android:textAlignment="center"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/delete"
        android:layout_alignLeft="@+id/delete"
        android:layout_alignStart="@+id/delete"
        app:layout_marginRightPercent="2%"/>

    <Button
        app:layout_widthPercent="28%"
        app:layout_aspectRatio="100%"
        android:background="@drawable/button_delete"
        android:id="@+id/delete"

        app:layout_marginRightPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</android.support.percent.PercentRelativeLayout>